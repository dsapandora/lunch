<section class="list">
<h3>Users</h3>

<% @users.each do |user| %>
  <div class="row">
    <div class="col-xs-1">
      <div class="round">
        <%= image_tag user.avatar.url(:avatar) if user.avatar? %>
        <%= image_tag "http://placehold.it/70x70&text=#{user.name}" unless user.avatar? %>
      </div>
    </div>
    <div class="col-xs-5 middle">
      <%= user.email %>
    </div>
    <div class="col-xs-6">
      <% if current_user.is_admin? %>
        <%= link_to edit_user_path(user) do %>
          <button type="button">Edit</button> 
        <% end %>
        <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <button type="button">Delete</button> 
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<%= link_to 'New User', new_user_path %>
</section>