<!DOCTYPE html>
<html>
<head>
  <title>Lunch</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= html_import_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body unresolved touch-action="auto">
<app-bar></app-bar>


    <toolbar>
      <% if user_signed_in? %>
        

          
            <%= link_to "Settings", edit_user_path(current_user) %>
          



          <% if current_user.is_admin? %>

             <%= link_to "Manage Users", users_path %>

             <%= link_to "Manage Lunch", menu_path %>

             <%= link_to "New Restaurant", new_restaurant_path %>
          
          <% end %>


      <% end %>




      <div flex>
        <% if user_signed_in? %>
          <%= image_tag current_user.avatar.url(:avatar) if current_user.avatar %>
          <%= link_to "Choose wisely!", root_path %>
        <% else %>
          <%= link_to "Lunch", root_path %>
        <% end %>
      </div>
      <% if user_signed_in? %>
        <%= link_to(destroy_user_session_path, :method => :delete) do %>
          <core-icon-button icon="settings-power"></core-icon-button>
        <% end %>
      <% end %>
    </toolbar>

    <% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
        <%= value %>
      </div>
    <% end %>

    <%= yield %>

</body>
</html>